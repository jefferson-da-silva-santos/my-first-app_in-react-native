{
  "extends": "expo/tsconfig.base",

    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "bundler",
      "jsx": "react-native",
      "strict": false,
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "isolatedModules": true,
      "types": [
        "react",
        "react-native"
      ]
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
}
